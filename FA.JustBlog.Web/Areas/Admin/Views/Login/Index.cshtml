@model FA.JustBlog.ViewModels.Users.LoginViewModel
@{ Layout = null; }


<!doctype html>
<html lang="en">

<head>
    <title>Login | ADMIN</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Assets/admin/dist/styles.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
          crossorigin="anonymous">
    <style>
        .login {
            background-color: aquamarine;
        }
    </style>
</head>

<body class="h-screen font-sans login bg-cover">
    <div class="container mx-auto h-full flex flex-1 justify-center items-center">
        <div class="w-full max-w-lg">
            <div class="leading-loose">
                <div class="max-w-xl m-4 p-10 bg-white rounded shadow-xl">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        <p class="text-gray-800 font-medium text-center text-lg font-bold">Login</p>
                        <div class="">
                            <label class="block text-sm text-gray-00" for="username">Username</label>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "w-full px-5 py-1 text-gray-700 bg-gray-200 rounded", @autofocus = "autofocus",@placeholder="User Name" })
                           @*<input class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" id="username" name=@Model.UserName type="text" required="" placeholder="User Name" aria-label="username">*@
                        </div>
                        <div class="mt-2">
                            <label class="block text-sm text-gray-600" for="password">Password</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "w-full px-5  py-1 text-gray-700 bg-gray-200 rounded" })
                            @*<input class="w-full px-5  py-1 text-gray-700 bg-gray-200 rounded" id="password" name=@Model.Password type="text" required="" placeholder="*******" aria-label="password">*@
                        </div>
                         <div class="mt-2">
                              <input class="mr-1" type="checkbox" required=""> Remember Password
                          </div>
                           <div class="mt-4 items-center justify-between">
                               <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Login</button>
                               <a class="inline-block right-0 align-baseline  font-bold text-sm text-500 hover:text-blue-800" href="#">
                                Forgot Password?
                                </a>
                          </div>
                      }


                </div>
            </div>
        </div>
    </div>
</body>
</html>

